{
    "compilerOptions": {
        "target": "ES2020", // Target Node.js version supported by VS Code
        "module": "CommonJS",
        "lib": ["ES2020"],
        "outDir": "./out", // Compile JS files to the 'out' directory
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true // Allow importing JSON files
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "out", "bin", "scripts"]
}
